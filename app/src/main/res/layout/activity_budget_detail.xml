<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9ecef">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1C2541">


        <nl.dionsegijn.konfetti.xml.KonfettiView
            android:id="@+id/konfettiView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <Button
        android:id="@+id/button7"
        android:layout_width="68dp"
        android:layout_height="46dp"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:backgroundTint="#F9A826"
        android:text="Back"
        android:textColor="#1C2541"
        android:textSize="8sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Budget Details"
            android:textColor="#FFFEFE"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMinGoalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Minimum Spend Goal"
            android:textColor="#FFFEFE"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBarMinGoal"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#F46133" />


        <TextView
            android:id="@+id/tvMaxLimitLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Maximum Spend Limit"
            android:textColor="#FFFEFE"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBarMaxSpend"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100"
            android:progress="0"
            android:progressTint="#EB1708" />


        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Overall Progress"
            android:textColor="#FFFEFE"
            android:textSize="18sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="100"
                android:progress="0"
                android:progressTint="#9C27B0" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="0% Complete"
            android:textColor="#FFFEFE"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/maxspendTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spend Limit: "
            android:textColor="#FFFEFE"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvTransactionsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Transactions"
            android:textColor="#FFFEFE"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/transactionsListView"
            android:layout_width="255dp"
            android:layout_height="195dp"
            android:background="#187386C5"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:padding="8dp" />
        <Button
            android:id="@+id/btnDownloadBudget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Budget Report"
            android:backgroundTint="#F9A826"
            android:textColor="#1C2541"
            android:layout_marginTop="16dp" />


    </LinearLayout>

</FrameLayout>


